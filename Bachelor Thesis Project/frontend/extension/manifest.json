{
    "name": "Hear Me Assistant",
    "description": "Chrome extension tool for visually impaired people.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "./options/options.html",
    "content_scripts": [
            {
                "matches": ["http://127.0.0.1:5000/data", "http://127.0.0.1:5000/images"],
                "js":["./node_modules/jquery/dist/jquery.min.js","./node_modules/axios/dist/axios.min.js"]
            }
    ],
    "commands": {
        "turn-on-extension": {
          "suggested_key": {
                "default": "Ctrl+Shift+Up",
                "mac": "Command+Shift+Up"
            },
          "description": "Key shortcut to turn on the extension."
        },
        "turn-off-extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+Down",
                "mac": "Command+Shift+Down"
            },
            "description": "Key shortcut to turn off the extension."
        },
        "stop-text-to-speech": {
            "suggested_key": {
                "default": "Ctrl+Shift",
                "mac": "Command+Shift"
            },
            "description": "Key shortcut to stop the text to speech mode of the extension."
        },
        "pause-text-to-speech": {
            "suggested_key": {
                "default": "Ctrl+Shift+Left",
                "mac": "Command+Shift+Left"
            },
            "description": "Key shortcut to pause the text to speech mode of the extension."
        },
        "resume-text-to-speech": {
            "suggested_key": {
                "default": "Ctrl+Shift+Right",
                "mac": "Command+Shift+Right"
            },
            "description": "Key shortcut to resume the text to speech mode of the extension if it was paused."
        },
        "extension-shortcuts-guide": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space",
                "mac": "Command+Shift+Space"
            },
            "description": "Key shortcut to open the guide for all shortcuts of the extension."
        }
    },
    "action": {
        "default_popup": "source.html",
        "default_icon": {
            "16": "/logo/icon16.png",
            "32": "/logo/icon32.png",
            "48": "/logo/icon48.png",
            "128": "/logo/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab", "unlimitedStorage", "scripting", "tts"],
    "icons": {
        "16": "/logo/icon16.png",
        "32": "/logo/icon32.png",
        "48": "/logo/icon48.png",
        "128": "/logo/icon128.png"
    }
}