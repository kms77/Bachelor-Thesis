{
    "name": "Hear Me Assistant",
    "description": "Chrome extension tool for visually impaired people.",
    "version": "1.0",
    "manifest_version": 3,
    "options_page": "./options/options.html",
    "content_scripts": [
            {
                "matches": ["http://127.0.0.1:5000/data", "http://127.0.0.1:5000/images"],
                "js":["./node_modules/jquery/dist/jquery.min.js","./node_modules/axios/dist/axios.min.js"]
            }
    ],
    "action": {
        "default_popup": "source.html",
        "default_icon": {
            "16": "/logo/icon16.png",
            "32": "/logo/icon32.png",
            "48": "/logo/icon48.png",
            "128": "/logo/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab", "unlimitedStorage", "scripting"],
    "icons": {
        "16": "/logo/icon16.png",
        "32": "/logo/icon32.png",
        "48": "/logo/icon48.png",
        "128": "/logo/icon128.png"
    }
}