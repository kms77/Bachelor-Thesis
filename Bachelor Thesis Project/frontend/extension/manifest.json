{
    "name": "Hear Me Assistant",
    "description": "Chrome extension tool for visually impaired people.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "./options/options.html",
    "content_scripts": [
            {
                "matches": ["http://127.0.0.1:5000/data", "http://127.0.0.1:5000/images"],
                "js":["./node_modules/jquery/dist/jquery.min.js","./node_modules/axios/dist/axios.min.js"]
            }
    ],
    "commands": {
        "extension-status": {
            "suggested_key": {
                  "default": "Ctrl+Up",
                  "mac": "Command+Up"
              },
            "description": "Key shortcut to turn on/off the extension."
          },
          "stop-text-to-speech": {
              "suggested_key": {
                  "default": "Ctrl+Down",
                  "mac": "Command+Down"
              },
              "description": "Key shortcut to stop the text to speech mode of the extension."
          },
          "text-to-speech-status": {
              "suggested_key": {
                  "default": "Ctrl+Right",
                  "mac": "Command+Right"
              },
              "description": "Key shortcut to pause/resume the text to speech mode of the extension."
          },
          "extension-shortcuts-guide": {
              "suggested_key": {
                  "default": "Ctrl+Left",
                  "mac": "Command+Left"
              },
              "description": "Key shortcut to open the audio guide for all shortcuts of the extension."
          }
    },
    "action": {
        "default_popup": "source.html",
        "default_icon": {
            "16": "/logo/icon16.png",
            "32": "/logo/icon32.png",
            "48": "/logo/icon48.png",
            "128": "/logo/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab", "unlimitedStorage", "scripting", "tts"],
    "icons": {
        "16": "/logo/icon16.png",
        "32": "/logo/icon32.png",
        "48": "/logo/icon48.png",
        "128": "/logo/icon128.png"
    }
}